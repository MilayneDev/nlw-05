  setCurrentEpisodeIndex(currentEpisodeIndex + 1);\n    }\n  }\n\n  function playPrevious() {\n    if (hasPrevious){\n      setCurrentEpisodeIndex(currentEpisodeIndex - 1);  \n    }\n    \n  }\n   \n  return (\n    <PlayerContext.Provider \n    value={{\n      episodeList, \n      currentEpisodeIndex,\n      play,\n      playList,\n      playNext,\n      playPrevious,\n      isPlaying,\n      isLooping,\n      togglePlay, \n      setPlayingState,\n      hasNext,\n      hasPrevious,\n      toggleLoop,\n    }}\n  >\n    {children}\n  </PlayerContext.Provider>\n  )\n}\n\nexport const usePlayer = () => {\n  return useContext(PlayerContext);\n}"]},"metadata":{},"sourceType":"module"}